<%= form_with(model: noticium, local: true) do |form| %>
  <% if noticium.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(noticium.errors.count, "error") %> prohibited this noticium from being saved:</h2>

      <ul>
        <% noticium.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="file">
    <label class="file-label">
      <%= form.file_field :featured_image, class: 'file-input' %>
      <span class="file-cta">
        <span class="file-icon">
          <i class="fas fa-upload"></i>
        </span>
        <span class="file-label">
          Choose the Featured Image
        </span>
      </span>
    </label>
  </div>
 
  </br>
 
  <div class="field">
    <%= form.label 'Title', class: 'label' %>
    <div class="control">
      <%= form.text_field :title, class: 'input' %>
    </div>
  </div>
 
  <div class="field">
    <%= form.label 'Author', class: 'label' %>
    <div class="control">
      <%= form.text_field :author, class: 'input' %>
    </div>
  </div>
 
 
  <div class="field">
    <%= form.label 'Content', class: 'label' %>
    <%= form.rich_text_area :content %>
  </div>
 
  <div class="field is-grouped">
    <div class="control">
      <%= form.submit 'Create', class: 'button is-link' %>
    </div>
    <div class="Content">
      <%= link_to 'Back', noticia_path, class: 'button is-link is-light' %>
    </div>
  </div>
<% end %>